<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/linen">
            <EditText
                    android:id="@+id/rowEditText"
                    android:layout_width="240dp" android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/rowContents"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    tools:text="It is cloudy today."
            />
    <TextView
            android:id="@+id/originDescription"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowEditText"/>
            <ImageView
                    android:id="@+id/originGoDescription"

                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/originGoChild"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_arrow_to_down"
                    android:contentDescription="@string/button"
                    android:visibility="invisible"/>
    <ImageView
            android:id="@+id/originGoChild"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_779_arrow_to_right"
                    android:contentDescription="@string/button"/>

</android.support.constraint.ConstraintLayout>