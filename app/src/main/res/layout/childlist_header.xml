<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/childCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:cardBackgroundColor="@color/linen"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
    <TextView
            android:id="@+id/childHeaderText"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="8dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp"
            android:layout_gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="this is child List."/>
    <ImageView
            android:id="@+id/backToParent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_to_left"
            android:contentDescription="@string/button"/>

</android.support.v7.widget.CardView>
